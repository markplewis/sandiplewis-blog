{
  "name": "sandi-plewis-blog",
  "version": "1.0.0",
  "private": true,
  "description": "Blog website for Sandi Plewis",
  "homepage": "https://www.sandiplewis.com",
  "author": "Mark Plewis <mplewis1@gmail.com>",
  "repository": "github:markplewis/sandiplewis-blog",
  "license": "UNLICENSED",
  "scriptsComments": {
    "start": "Starts both applications (Sanity Studio and Next.js) in development mode",
    "sanity-start": "Starts Sanity Studio's development server (the `sanity start` command runs within the `studio` folder)",
    "next-start": "`Starts the Next.js application in development mode with hot-code reloading, error reporting, etc.",
    "build": "Vercel CI build command: creates optimized production builds of both applications (Sanity Studio and Next.js)",
    "sanity-build": "Builds the current Sanity configuration to a static bundle",
    "next-analyze": "Runs Webpack Bundle Analyzer",
    "prepare": "Installs Husky on 'npm install' and 'npm publish'",
    "postinstall": "Runs `npm install` inside of the `studio` directory",
    "check": "Checks for outdated NPM packages",
    "lint": "Runs ESLint",
    "test": "Runs Jest tests",
    "test-watch": "Watches files and re-runs Jest tests when they change"
  },
  "scripts": {
    "start": "concurrently -k -c cyan,yellow -n sanity,next \"npm:sanity-start\" \"next dev\"",
    "sanity-start": "cp .env.local ./studio/.env.development && cd studio && sanity start",
    "next-start": "next dev",
    "build": "npm run sanity-build && pwd && next build",
    "sanity-build": "cd studio && sanity build ../public/studio -y && cd ..",
    "next-analyze": "ANALYZE=true next build",
    "prepare": "husky install",
    "postinstall": "cd studio && npm install && cd ..",
    "check": "npx npm-check -s -u",
    "lint": "next lint",
    "test": "jest --cache",
    "test-watch": "jest --watch"
  },
  "dependencies": {
    "@next/bundle-analyzer": "^12.0.7",
    "@sanity/block-content-to-react": "^3.0.0",
    "@sanity/client": "^2.21.10",
    "@sanity/image-url": "^1.0.1",
    "abort-controller": "^3.0.0",
    "apca-w3": "0.0.98-g-4g.3",
    "classnames": "^2.2.6",
    "concurrently": "^6.4.0",
    "date-fns": "^2.27.0",
    "dompurify": "^2.3.4",
    "form-data": "^4.0.0",
    "friendly-challenge": "^0.9.0",
    "mailgun.js": "^3.7.3",
    "modern-normalize": "^1.1.0",
    "next": "^12.0.7",
    "next-plausible": "^3.1.4",
    "next-sanity": "^0.4.0",
    "nprogress": "^0.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.22.1",
    "react-icons": "^4.3.1",
    "swr": "^1.1.1"
  },
  "devDependencies": {
    "@sanity/cli": "^2.22.0",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "eslint": "^8.4.1",
    "eslint-config-next": "^12.0.7",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-testing-library": "^5.0.1",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^7.0.2",
    "postcss-pxtorem": "^6.0.0",
    "prettier": "^2.5.1",
    "react-test-renderer": "^17.0.2",
    "typescript": "^4.5.4"
  }
}
